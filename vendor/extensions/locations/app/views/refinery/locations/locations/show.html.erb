<% content_for :body_content_title do %>
  <%= @location.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @location.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @location.description %>
    </p>
  </section>
  <section>
    <h1>Picture</h1>
    <p>
      <%= image_fu @location.picture, nil %>
    </p>
  </section>
  <section>
    <h1>Country</h1>
    <p>
      <%=raw @location.country %>
    </p>
  </section>
  <section>
    <h1>State</h1>
    <p>
      <%=raw @location.state %>
    </p>
  </section>
  <section>
    <h1>City</h1>
    <p>
      <%=raw @location.city %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>
      <%=raw @location.address %>
    </p>
  </section>
  <section>
    <h1>Zip</h1>
    <p>
      <%=raw @location.zip %>
    </p>
  </section>
  <section>
    <h1>Hours</h1>
    <p>
      <%=raw @location.hours %>
    </p>
  </section>
  <section>
    <h1>Telephone</h1>
    <p>
      <%=raw @location.telephone %>
    </p>
  </section>
  <section>
    <h1>Fax</h1>
    <p>
      <%=raw @location.fax %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @location.email %>
    </p>
  </section>
  <section>
    <h1>Directionslink</h1>
    <p>
      <%=raw @location.directionslink %>
    </p>
  </section>
  <section>
    <h1>About</h1>
    <p>
      <%=raw @location.about %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="locations">
      <% @locations.each do |location| %>
        <li>
          <%= link_to location.name, refinery.locations_location_path(location) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
