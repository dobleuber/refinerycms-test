<ul>
  <% if ::Refinery::Events::Admin::EventTypesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.events_admin_event_types_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_events_admin_event_type_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Events::Admin::EventTypesController.sortable? && ::Refinery::Events::EventType.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Event Types"),
                 refinery.events_admin_event_types_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Event Types"),
                 refinery.events_admin_event_types_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
