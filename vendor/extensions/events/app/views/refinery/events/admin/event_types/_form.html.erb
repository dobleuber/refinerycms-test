<%= form_for [refinery, :events_admin, @event_type] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @event_type,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.event_types.admin.event_types.event_type'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @event_type.name) -%>
<% end -%>
