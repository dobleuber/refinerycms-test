<%= form_for [refinery, :locationimages_admin, @locationimage] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @locationimage,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @locationimage.photo,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.locationimages.admin.locationimages.locationimage'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @locationimage.title) -%>
<% end -%>
